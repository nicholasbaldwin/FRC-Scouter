<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:windowSoftInputMode = "adjustPan"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_teleop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.nicholas.app.teleop"
        android:weightSum="1"
        android:descendantFocusability="blocksDescendants"

        >
        <TextView
            android:layout_weight="1"
            android:text="High Cycles (T-OP):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:layout_below="@+id/textView17"
            />
        <TextView
            android:layout_weight="1"
            android:text="Tele-Op"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="35sp"
            android:textStyle="normal|bold" />
        <LinearLayout
            android:layout_below="@id/textView12"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            >

            <EditText
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText6"
                style="@style/Widget.AppCompat.EditText"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="34sp"
                />
            <Button
                android:layout_margin="0sp"

                android:padding="0sp"

                android:text="+"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                style="@style/buttonStyle"                android:id="@+id/button4" />
            <Button
                android:text="-"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                style="@style/buttonStyle"                android:id="@+id/button5"
                android:padding="0sp"
                android:layout_margin="0sp" />


        </LinearLayout>


        <TextView
            android:layout_weight="1"
            android:text="Low Cycles (T-OP):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_below="@+id/layout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
             />

        <LinearLayout
            android:layout_below="@id/textView13"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout2"
            >

            <EditText
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText2"
                style="@style/Widget.AppCompat.EditText"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="34sp"
                />
            <Button
                android:layout_margin="0sp"

                android:padding="0sp"

                android:text="+"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                style="@style/buttonStyle"                android:id="@+id/button6" />
            <Button
                android:text="-"

                android:layout_weight="0.5"
                android:layout_width="0dp"
                style="@style/buttonStyle"                android:id="@+id/button8"
                android:padding="0sp"
                android:layout_margin="0sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5sp"
            android:layout_below="@+id/textView10"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout3"
            >

            <EditText
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText4"
                style="@style/Widget.AppCompat.EditText"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="34sp"
                />

            <Button
                android:layout_margin="0sp"

                android:padding="0sp"
style="@style/buttonStyle"
                android:text="+"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:id="@+id/gFailAdd" />

            <Button
                android:text="-"
                style="@style/buttonStyle"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:id="@+id/gFailSub"
                android:padding="0sp"
                android:layout_margin="0sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5sp"
            android:layout_below="@id/textView7"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout4"
            >

            <EditText
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="65dp"

                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText3"
                style="@style/Widget.AppCompat.EditText"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="34sp"
                />
            <Button
                android:layout_margin="0sp"

                android:padding="0sp"

                android:text="+"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:id="@+id/gSuccessAdd"
                style="@style/buttonStyle" />
            <Button
                android:text="-"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:id="@+id/gSuccessSub"
                android:padding="0sp"
                android:layout_margin="0sp"
                style="@style/buttonStyle"
                />


        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:text="Gear Successes (T-OP):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/layout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="Gear Failures (T-OP):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="center"
            android:textSize="25sp"
           android:layout_below="@id/layout2"
            />

        <Spinner
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:entries="@array/arrays"

            android:background="@color/colorPrimary"
            android:gravity="center"
            android:popupBackground="@color/colorPrimary"

            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_weight="1"
            android:text="Low Goal Score (T-OP):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
      />
        <TextView
            android:layout_weight="1"
            android:text="Fuel Collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_below="@+id/spinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            />





    <LinearLayout
        android:layout_marginTop="5sp"
        android:layout_below="@id/textView4"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout6"
        >

        <CheckBox android:id="@+id/checkBox2"
            android:gravity="center"
            android:layout_height="55dp"
            android:text="Hopper"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/textView8"
            android:textSize="25sp"
            android:textStyle="normal|bold" />


        <CheckBox
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/checkBox3"
            android:layout_height="55dp"

            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:text="Ground"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"
            android:textStyle="normal|bold"
            android:layout_above="@+id/textView3"
            />
    </LinearLayout>


        <TextView
            android:layout_weight="1"
            android:text="High Goal Score (T-OP):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5sp"
            android:layout_below="@id/layout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:entries="@array/arrays"

            android:background="@color/colorPrimary"
            android:gravity="center"
            android:popupBackground="@color/colorPrimary"

            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Go To End Game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/layout6"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:background="@android:color/darker_gray"
            android:textStyle="normal|bold" />

    </RelativeLayout>
</ScrollView>