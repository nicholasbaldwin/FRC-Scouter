<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nicholas.app.Code">

    <TextView
        android:text="Enter A Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="34sp" />

    <EditText
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/codeVal"
        style="@style/Widget.AppCompat.EditText"
        android:singleLine="false"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_marginTop="10sp"
        android:text="Data Preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/codeVal"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textAllCaps="false" />


    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_below="@+id/textView2"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        >

        <TextView
            android:text="Team #"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />

        <EditText
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="20"
            android:id="@+id/editText4"
            style="@style/Widget.AppCompat.EditText"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="20sp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_below="@+id/layout1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"

        >

        <TextView
            android:text="Match #"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />

        <EditText
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="20"
            android:id="@+id/editText5"
            style="@style/Widget.AppCompat.EditText"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="20sp"
            />


    </LinearLayout>

    <Button
        android:background="@android:color/darker_gray"
        android:text="Create Match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:layout_marginTop="35dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:fontFamily="sans-serif"
        android:textSize="25sp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold"
        android:layout_below="@+id/layout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_marginTop="17dp"
        android:text="A match with similar data has already been created."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_below="@+id/button10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginTop="5dp"
        android:text="Overwrite?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorSecondary"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_below="@+id/textView4"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout3"

        >

        <Button
            android:background="@android:color/darker_gray"
            android:text="Yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button12"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:fontFamily="sans-serif"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"
            android:textStyle="normal|bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"/>
        <Button
            android:background="@android:color/darker_gray"
            android:text="No"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button11"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:fontFamily="sans-serif"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"
            android:textStyle="normal|bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



    </LinearLayout>
</RelativeLayout>
